<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
    <div class="col-4">
      <div class="img">
        <%= image_tag post.image.variant(resize: "500x500") %>
      </div>
      <div class="date">
        <hr><%= post.created_at.strftime("%b %d") %>
      </div>
      <div class="title">
        <a><%= link_to post.title, post %></a><hr>
      </div>
    </div>
    <% end %>
  </div>
</div>
<%= link_to 'New Post', new_post_path %>
<%= paginate @posts %>