<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="commentsPost">
        <div class="autorComment">
          <%= comment.comment %>
          <p><%= comment.created_at.strftime("%Y-%m-%d") %></p>
          <hr>
        </div>
        <div class="bodyComment">
          <%= comment.body %>
          <hr>
        </div>
        <div class="destroyComment">
          <%= link_to '', [comment.post, comment], class: "fa fa-trash",
          :confirm => 'Are you sure?',
          :method => :delete %>
        </div>
      </div>
    </div>
  </div>
</div>
