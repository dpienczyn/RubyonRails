<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="addComments">
  <div class="form-group">
    <%= f.text_field :comment, class: "form-control", placeholder: "Name" %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, class: "form-control", placeholder: "Your description" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
</div>
<% end %>